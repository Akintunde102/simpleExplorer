{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "typeRoots": [
      "types/**/*.d.ts"
    ],
    "noErrorTruncation": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017.object"
    ],
    "paths": {
      "~styles/*": ["src/ui/styles/*"]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/__tests__",
    "./build/**/*",
    "./dist/**/*"
  ],
  "indent": [false]
}
